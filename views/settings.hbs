{{#> layout}}
<div class="page-body">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5>{{title}}</h5>
      </div>

      <div class="card-body">
        <form action="/dashboard/settings" method="get">
          <div class="mb-3">
            <label for="lang" class="form-label">{{language_label}}:</label>
            <select name="lang" id="lang" class="form-control">
              <option value="en" {{#if (eq lang 'en')}}selected{{/if}}>English</option>
              <option value="ar" {{#if (eq lang 'ar')}}selected{{/if}}>العربية</option>
            </select>
          </div>

          <div class="mb-3 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary px-3 py-2">{{save_button}}</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{/layout}}